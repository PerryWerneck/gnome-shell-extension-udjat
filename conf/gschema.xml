  <schema id="br.eti.werneck.udjat.gnome" path="/br/eti/werneck/udjat/gnome/">

    <key name="autohide" type="b">
      <default>true</default>
      <summary>Hide when ready</summary>
      <description>Hide indicator when all states are ok</description>
    </key>

    <key name="notify" type="b">
      <default>true</default>
      <summary>Notify</summary>
      <description>Notify on state level change</description>
    </key>

    <key name="timer" type="u">
      <default>1</default>
      <summary>Timer interval (in minutes)</summary>
      <description>Value for remote update timers</description>
    </key>

